#include <stdio.h>
#include <cs50.h>

int get_Mario_int(string prompt);
int main(void)
{   //get input from user and also call the function
    int i = get_Mario_int("Height: ");
    //loop for rows
    for (int r = 0; r <= i; r++)
    {    
        //loop for space
        for(int sp = r; sp < i; sp++)
        {
            printf(" ");  
        }
        //loop for print 
        for (int p = 0; p < r; p++)
        {
            printf("#");
        }
        printf("\n");
    }
}

int get_Mario_int(string prompt)
{   
    int n;
    do
    {
        n = get_int("%s", prompt);
    } //cheak condition:
    while (n  > 8 || n < 1);
    return n;
}
